@model Ijustkeeptryingiguess.Models.SalesLeadEntity

@{
    ViewData["Title"] = "Delete";
}

<!-- Overskrift for slettingssiden -->
<h1>Delete</h1>

<!-- Advarselsspørsmål før sletting -->
<h3>Are you sure you want to delete this?</h3>

<!-- Visning av informasjon om salgsledelseenheten som skal slettes -->
<div>
    <h4>SalesLeadEntity</h4>
    <hr />

    <!-- Definisjonslister for å vise detaljer om salgsledelseenheten -->
    <dl class="row">
        <!-- Fornavn -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <!-- Etternavn -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <!-- Mobilnummer -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mobile)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mobile)
        </dd>

        <!-- E-postadresse -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>

        <!-- Kilde -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Source)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Source)
        </dd>
    </dl>

    <!-- Skjema for å bekrefte sletting -->
    <form asp-action="Delete">
        <!-- Skjult felt for å sende med ID for den enheten som skal slettes -->
        <input type="hidden" asp-for="Id" />

        <!-- Knapp for å bekrefte sletting -->
        <input type="submit" value="Delete" class="btn btn-danger" /> |

        <!-- Lenke for å gå tilbake til listen over salgsledelseenheter -->
        <a asp-action="Index">Back to List</a>
    </form>
</div>
