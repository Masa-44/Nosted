@model Ijustkeeptryingiguess.Models.ServiceOrdre

<!DOCTYPE html>
<html>
<head>
    <!-- Tittelen på HTML-dokumentet -->
    <title>Ny Serviceordre</title>
</head>
<body>
    <!-- Overskrift som viser "Ny Serviceordre" på nettsiden -->
    <h1>Ny Serviceordre</h1>

    <!-- Skjema for å opprette en ny serviceordre, sender data til "PostService" metoden i "Home" controlleren ved bruk av HTTP POST -->
    <form asp-controller="Home" asp-action="PostService" method="POST">
        <!-- Deler skjemaet i to kolonner ved bruk av flex-styling -->
        <div style="display: flex;">

            <!-- Venstre kolonne med kundeinformasjon -->
            <div style="width: 50%; padding: 10px;">
                <!-- Overskrift som viser "Kundeinformasjon" -->
                <h2>Kundeinformasjon</h2>
                <!-- Input-felter for kundeinformasjon inkludert ID, serienummer, navn, kontaktinformasjon, og adresse -->
                <div class="form-group">
                    <label for="id">Id for serviceordren</label>
                    <input type="text" id="id" name="Id" class="form-control" readonly placeholder="Auto generert">
                </div>
                <div class="form-group">
                    <label for="serienummer">Serienummer:</label>
                    <input type="text" id="serienummer" name="Serienummer" class="form-control">
                </div>
                <div class="form-group">
                    <label for="fornavn">Fornavn:</label>
                    <input type="text" id="fornavn" name="Fornavn" class="form-control">
                </div>
                <div class="form-group">
                    <label for="etternavn">Etternavn:</label>
                    <input type="text" id="etternavn" name="Etternavn" class="form-control">
                </div>
                <div class="form-group">
                    <label for="mobil">Mobil No:</label>
                    <input type="text" id="mobil" name="Mobil" class="form-control">
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="Email" class="form-control">
                </div>
                <div class="form-group">
                    <label for="addresse">Adresse:</label>
                    <input type="text" id="addresse" name="Addresse" class="form-control">
                </div>

                <!-- Linjeskift for bedre lesbarhet -->
                <br />
                <br />

                <!-- Textarea-felt for å beskrive feilen i produktet -->
                <div class="form-group">
                    <label for="feil_beskrivelse">Feil beskrivelse:</label>
                    <textarea id="feil_beskrivelse" name="Feil_beskrivelse" class="form-control" rows="4"></textarea>
                </div>
            </div>

            <!-- Høyre kolonne med serviceordreinformasjon -->
            <div style="width: 50%; padding: 10px;">
                <!-- Overskrift som viser "Serviceordreinformasjon" -->
                <h2>Serviceordreinformasjon</h2>
                <!-- Input-felter for bestillingsnummer, produkttype, mottaksdato, årsmodell -->
                <div class="form-group">
                    <label for="bestillingsnummer">Bestillingsnummer:</label>
                    <input type="text" id="bestillingsnummer" name="Bestillingsnummer" class="form-control">
                </div>
                <div class="form-group">
                    <label for="produkttype">Produkttype:</label>
                    <input type="text" id="produkttype" name="Produkttype" class="form-control">
                </div>
                <div class="form-group">
                    <label for="dato">Mottatt dato:</label>
                    <input type="date" id="dato" name="Dato" class="form-control">
                </div>
                <!-- Input-felt for årsmodell med tilhørende flex-styling -->
                <div class="form-group" style="display: flex;">
                    <label for="aarsmodell">Årsmodell:</label>
                    <input type="text" id="aarsmodell" name="Aarsmodell" class="form-control" style="width: 50%;">
                </div>
                <!-- Checkbox-felter for å indikere garanti, service, og reparasjon -->
                <div class="form-group">
                    <label for="Garanti">Garanti:</label>


                    <input type="checkbox" id="Garanti" name="Garanti" value="true">
                </div>
                <div class="form-group">
                    <label for="Service">Service:</label>
                    <input type="checkbox" id="Service" name="Service" value="true">
                </div>
                <div class="form-group">
                    <label for="Reparasjon">Reparasjon:</label>
                    <input type="checkbox" id="Reparasjon" name="Reparasjon" value="true">
                </div>
                <!-- Textarea-felt for å legge inn kommentar fra kunden -->
                <div class="form-group">
                    <label for="kunde_kommentar">Kommentar fra kunde:</label>
                    <textarea id="kunde_kommentar" name="Kunde_kommentar" class="form-control" rows="4"></textarea>
                </div>
                <!-- Linjeskift for bedre visuell separasjon -->
                <br />
                <!-- Knapp for å sende inn skjemaet -->
                <button type="submit" class="btn btn-primary">Opprett Serviceordre</button>
            </div>
        </div>
    </form>
</body>
</html>

