@model CheckListViewModel

<!-- Overskrift som viser tittelen på sjekklisten -->
<h2>Service Checklist for Vinsj</h2>

<!-- Skjema for å lagre sjekklisten ved innsending -->
<form asp-action="Save" method="post">
    <!-- Input-felt for å angi serienummer -->
    <div class="form-group">
        <label for="SerialNumber">Serienummer:</label>
        <input type="text" id="SerialNumber" name="SerialNumber" class="form-control" value="@Model.SerialNumber" />
    </div>

    <!-- Input-felt for å angi vinsjens type -->
    <div class="form-group">
        <label for="Type">Type:</label>
        <input type="text" id="Type" name="Type" class="form-control" value="@Model.Type" />
    </div>

    <br />

    <!-- Mekanisk del av sjekklisten -->
    <h3>Mekanisk</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Sjekkpunkt</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <!-- Liste med sjekkpunkter og tilhørende status-dropdowns -->
            <tr>
                <td>Sjekk clutch lameller for slitasje</td>
                <td>
                    <select id="ClutchLamellStatus" name="ClutchLamellStatus">
                        <option value="OK">OK</option>
                        <option value="Bør skiftes">Bør skiftes</option>
                        <option value="Defekt">Defekt</option>
                    </select>
                </td>
            </tr>
            <!-- Legg til flere rader for andre sjekkpunkter -->
        </tbody>
    </table>

    <!-- Hydraulisk del av sjekklisten -->
    <h3>Hydraulisk</h3>
    <table class="table">
        <!-- Tabellhode med kolonnenavn -->
        <thead>
            <tr>
                <th>Sjekkpunkt</th>
                <th>Status</th>
            </tr>
        </thead>
        <!-- Tabellkropp med sjekkpunkter og tilhørende status-dropdowns -->
        <tbody>
            <tr>
                <td>Sjekk hydraulikk sylinder for slitasje</td>
                <td>
                    <select id="HydraulikkSylinderStatus" name="HydraulikkSylinderStatus">
                        <option value="OK">OK</option>
                        <option value="Bør skiftes">Bør skiftes</option>
                        <option value="Defekt">Defekt</option>
                    </select>
                </td>
            </tr>
            <!-- Legg til flere rader for andre sjekkpunkter -->
        </tbody>
    </table>

    <!-- Elektro del av sjekklisten -->
    <h3>Elektro</h3>
    <table class="table">
        <!-- Tabellhode med kolonnenavn -->
        <thead>
            <tr>
                <th>Sjekkpunkt</th>
                <th>Status</th>
            </tr>
        </thead>
        <!-- Tabellkropp med sjekkpunkter og tilhørende status-dropdowns -->
        <tbody>
            <tr>
                <td>Sjekk ledningsnett på vinsj</td>
                <td>
                    <select id="LedningsnettStatus" name="LedningsnettStatus">
                        <option value="OK">OK</option>
                        <option value="Bør skiftes">Bør skiftes</option>
                        <option value="Defekt">Defekt</option>
                    </select>
                </td>
            </tr>
            <!-- Legg til flere rader for andre sjekkpunkter -->
        </tbody>
    </table>

    <!-- Trykk settinger del av sjekklisten -->
    <h3>Trykk settinger</h3>
    <div class="form-group">
        <!-- Input-felt for å angi trykkinnstillinger -->
        <input type="text" id="Trykk settinger1" name="Trykk settinger1" class="form-control" value="xx- Bar" />
        <input type="text" id="Trykk settinger2" name="Trykk settinger2" class="form-control" value="" />
        <input type="text" id="Trykk settinger3" name="Trykk settinger3" class="form-control" value="" />
    </div>

    <br />

    <!-- Funksjonstest del av sjekklisten -->
    <h3>Funksjonstest</h3>
    <div class="form-group">
        <!-- Input-felt for å angi funksjonstester -->
        <input type="text" id="Funksjons test1" name="Funksjons test1" class="form-control" value="Test vinsj og kjør alle funksjoner" />
        <input type="text" id="Funksjons test2" name="Funksjons test2" class="form-control" value="Trekkraft KN" />
        <input type="text" id="Funksjons test3" name="Funksjons test3" class="form-control" value="Bremsekraft KN" />
        <input type="text" id="Funksjons test4" name="Funksjons test4" class="form-control" value="" />
    </div>

    <br />

    <!-- Kommentarer del av sjekklisten -->
    <h3>Kommentarer</h3>
    <div class="form-group">
        <!-- Input-felt for å legge inn kommentarer -->
        <input type="text" id="Kommentarer" name="Kommentarer" class="form-control" value="" />
    </div>

    <br />

    <!-- Dato del av sjekklisten -->
    <h3>Dato</h3>
    <div class="form-group">
        <!-- Input-felt for å angi dato -->
        <input type="text"
               id="Dato" name="Dato" class="form-control" value="" />
    </div>

    <br />

    <!-- Signatur del av sjekklisten -->
    <h3>Signatur</h3>
    <div class="form-group">
        <!-- Input-felt for å legge inn signatur -->
        <input type="text" id="Signatur" name="Signatur" class="form-control" value="" />
    </div>

    <br>

    <!-- Knapp for å sende inn sjekklisten -->
    <button type="submit" class="btn btn-primary">Lagre sjekkliste</button>
</form>
