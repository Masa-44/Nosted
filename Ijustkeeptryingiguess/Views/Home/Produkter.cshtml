@{
    // Setter tittelen på siden til "Product Order Form" ved hjelp av ViewBag
    ViewBag.Title = "Product Order Form";
}

<!-- Overskrift som viser tittelen satt i ViewBag -->
<h1>Product Order Form</h1>

<!-- Skjema for å legge inn en ny produktbestilling -->
<form asp-controller="Order" asp-action="Create" method="post">
    <div class="form-group">
        <label for="CustomerName">Customer Name:</label>
        <!-- Inntastingsfelt for kundens navn -->
        <input type="text" id="CustomerName" name="CustomerName" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="ContactEmail">Contact Email:</label>
        <!-- Inntastingsfelt for kontaktpersonens e-postadresse -->
        <input type="email" id="ContactEmail" name="ContactEmail" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="ProductName">Product Name:</label>
        <!-- Inntastingsfelt for produktnavnet -->
        <input type="text" id="ProductName" name="ProductName" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Quantity">Quantity:</label>
        <!-- Inntastingsfelt for antall produkter, begrenset til minimum 1 -->
        <input type="number" id="Quantity" name="Quantity" class="form-control" min="1" required />
    </div>

    <div class="form-group">
        <label for="ShippingAddress">Shipping Address:</label>
        <!-- Tekstområde for leveringsadressen -->
        <textarea id="ShippingAddress" name="ShippingAddress" class="form-control" rows="4" required></textarea>
    </div>

    <!-- Knapp for å sende inn bestillingen -->
    <button type="submit" class="btn btn-primary">Submit Order</button>
</form>





